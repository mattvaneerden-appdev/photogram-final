<h1>List of photos</h1>

<% if session.fetch(:user_id) %>
<form action="/insert_photo" method="post" enctype="multipart/form-data">
  <label> Image </label>
  <input type="file" id="picture" name="picture">

  <label for="browser_caption">Caption</label>
  <textarea id="browser_caption" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

  <button>Add photo</button>
</form>
<% end %>


<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>
 
      <% @list_of_photos.each do |a_photo| %>
      <% if a_photo.user.private %>
      <% else %>
      <tr>
        <td>
          <img src="<%= a_photo.picture %>">
          <%#<img src="<%= a_photo.image %><%#">%>
         
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.user.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
